<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>BOOK</display-name>
  
	 <servlet>
    <!-- 프론트 컨트롤러 역할을 하는 DispatcherServlet 정의  -->
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!--초기화 파라미터  -->
    <init-param>
    	<param-name>contextConfigLocation</param-name><!-- 스프링 컨테이너 초기화 -->
      	<param-value>
      	<!-- 설정에 사용되는 파일 -->
           classpath:spring-book.xml
           classpath:spring-controller.xml
           classpath:spring-mvc.xml
      	</param-value>
    </init-param>
    <!-- 서버 실행시 로드 (+순서 지정) -->
    <load-on-startup>1</load-on-startup>
  </servlet>
  	
  	
  	<!-- 서블릿 매핑 -->
  	
  	<servlet-mapping><!-- 여기서 웹 요청 지정 -->
    <servlet-name>dispatcher</servlet-name><!-- dispatcherServlet이 처리하도록 지정 -->
    <url-pattern>/</url-pattern> <!-- 최상위 경로 요청을 dispatcher 서블릿이 처리하도록 매핑 -->
  </servlet-mapping>
  
  <!-- 요청 파라미터의 인코딩 처리를 위한 필터를 등록하고 있다. -->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>